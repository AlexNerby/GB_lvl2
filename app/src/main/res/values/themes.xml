<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppWeatherGb" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.AppWeatherGb.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme_AppTheme" parent="Theme.AppWeatherGb.NoActionBar">
        <item name="cardBackgroundColor">@drawable/gradient</item>
        <item name="backgroundColor">@color/text_header</item>
        <item name="colorSecondaryVariant">@color/gradient_high</item>
        <item name="colorPrimary">@color/cardViewBackgr</item>
    </style>

    <style name="Theme_AppDarkTheme" parent="Theme.AppWeatherGb.NoActionBar">
        <item name="cardBackgroundColor">@drawable/gradient_darck</item>
        <item name="backgroundColor">@color/white</item>
        <item name="colorSecondaryVariant">@color/gradient_dark_start</item>
        <item name="colorPrimary">@color/cardViewBackgrDark</item>

    </style>

    <style name="Theme.Menu.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Menu.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    
</resources>