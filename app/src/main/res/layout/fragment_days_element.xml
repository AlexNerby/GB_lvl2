<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="@dimen/dp15">

    <TextView
        android:id="@+id/day_element"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        android:fontFamily="sans-serif-black"
        android:text="@string/demo_data_recycler"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="@dimen/sp20"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="@string/demo_temp_recycler"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/day_element"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/day_element"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/demo_tempNight_recycler"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/imageVievWidth_recycler"
        android:layout_height="@dimen/imageVievHigh_recycler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/day_element"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_weather" />

</androidx.constraintlayout.widget.ConstraintLayout>